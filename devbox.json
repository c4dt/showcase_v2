{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": ["bun@1.2.19", "git@latest", "pre-commit@latest", "prettier@latest", "nodejs@latest"],
  "shell": {
    "init_hook": ["bun install && bun playwright install"],
    "scripts": {
      "dev": ["bun dev"],
      "git": ["git $@"],
      "prettier": ["prettier -w ."],
      "playwright": ["bun playwright:test --reporter line"],
      "playwright-ui": ["bun playwright:test-ui"]
    }
  }
}
